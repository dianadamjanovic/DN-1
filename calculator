a = int(input("Input the first number: "))
b = int(input("Input the second number: "))
operation = input("Input the operation (+,-,* or /): ")

if operation == "+":
    print(a+b)
elif operation == "-":
    print(a-b)
elif operation == "*":
    print(a*b)
elif operation == "/":
    print(int(a/b))
else:
    print("Check if you input the right operation sign!")
