mood = input("How do you feel today? happy, nervous, sad, excited or relaxed? ")


if mood == "happy":
    print("It is great to see you happy!")

elif mood == "nervous":
    print("Take a deep breath 3 times.")

elif mood == "sad":
    print("Don't be sad!")

elif mood == "excited":
    print("Share your excitement with others!")

elif mood == "relaxed":
    print("Relaxed and taking it easy!")

else:
    print("I don't recognize this mood!")
